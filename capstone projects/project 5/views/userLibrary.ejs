<%- include("partials/header.ejs")  %>

    <div
      class="d-flex flex-column justify-content-center align-items-center mb-3"
      style="width: 100%"
    >
      <h1 class="mb-4"><%= name %>'s Books</h1>

      <form action="/addNewBook" method="post" class="mb-4">
        <input type="text" name="bookTitle" placeholder="Enter book title" />

        <button type="submit" class="btn btn-sm btn-secondary">
          Add New Book
        </button>
      </form>

      <form action="/" method="get">
        <button type="submit" class="btn btn-primary">Home</button>
      </form>
    </div>

    <div class="album py-5">
      <div class="container">
        <div
          class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 bg-info rounded-5 p-5"
        >
          <!-- CRIS/ For each book, do the code below -->
          <% books.forEach((book => { %>
          <div class="col">
            <div class="card shadow-sm">
              <img
                src="<%= book.bookCover %>"
                alt="book cover"
                class="mx-auto d-block img-fluid"
              />

              <!-- CRIS/ Book name -->
              <div class="card-body">
                <h2><%= book.title %></h2>

                <!-- CRIS/ Book summary -->
                <p class="card-text"><%= book.summary.firstPart %></p>
                <p
                  class="card-text collapse"
                  id="<%= `collapsibleText${book.id}` %>"
                >
                  <%= book.summary.secondPart %>
                </p>
                <div class="d-flex justify-content-between align-items-center">
                  <!-- CRIS/ buttons -->
                  <div class="btn-group">
                    <form action="/updateUserBook" method="post">
                      <button
                        type="submit"
                        class="btn btn-success btn-sm"
                        name="viewButtonBookId"
                        value="<%= book.id %>"
                      >
                        Open Book
                      </button>

                      <button
                        type="submit"
                        formaction="/deleteBook"
                        class="btn btn-danger btn-sm"
                        name="deleteButtonBookId"
                        value="<%= book.id %>"
                      >
                        Delete
                      </button>
                    </form>
                  </div>
                  <button
                    class="btn btn-sm btn-secondary ms-2"
                    type="button"
                    id="<%= `toggleButton${book.id}` %>"
                    onclick="toggleText('<%= book.id %>')"
                  >
                    Full Summary
                  </button>
                </div>
              </div>
            </div>
          </div>
          <% })); %>
        </div>
      </div>
    </div>

    <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script>
      function toggleText(bookId) {
        var text = document.getElementById(`collapsibleText${bookId}`);
        var button = document.getElementById(`toggleButton${bookId}`);

        if (text.classList.contains("collapse")) {
          text.classList.remove("collapse");
          button.textContent = "See Less";
        } else {
          text.classList.add("collapse");
          button.textContent = "Full Summary";
        }
      }
    </script>
  </body>
</html>
