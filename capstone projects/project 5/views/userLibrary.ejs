<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/bootstrap/css/bootstrap.min.css" />
  </head>
  <body>
    <div
      class="d-flex flex-column justify-content-center align-items-center mb-3"
      style="width: 100%"
    >
      <h1 class="mb-4"><%= name %>'s Books</h1>

      <form action="/addNewBook" method="post" class="mb-4">
        <input type="text" name="bookTitle" placeholder="Enter book title" />

        <button type="submit" class="btn btn-sm btn-secondary">
          Add New Book
        </button>
      </form>

      <form action="/" method="get">
        <button type="submit" class="btn btn-primary">Home</button>
      </form>
    </div>

    <div class="album py-5 bg-body-tertiary">
      <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
          <!-- CRIS/ For each book, do the code below -->
          <% books.forEach((book => { %>
          <div class="col">
            <div class="card shadow-sm">
              <img
                src="<%= book.bookCover %>"
                alt="book cover"
                class="mx-auto d-block img-fluid"
              />

              <!-- CRIS/ Book name -->
              <div class="card-body">
                <h2><%= book.title %></h2>

                <!-- CRIS/ Book summary -->
                <p class="card-text"><%= book.summary %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <!-- CRIS/ buttons -->
                  <div class="btn-group">
                    <form action="/view" method="post">
                      <button
                        type="submit"
                        class="btn btn-sm btn-outline-secondary"
                        name="viewButtonBookId"
                        value="<%= book.id %>"
                      >
                        View
                      </button>

                      <button
                        type="submit"
                        formaction="/deleteBook"
                        class="btn btn-danger btn-sm"
                        name="deleteButtonBookId"
                        value="<%= book.id %>"
                      >
                        Delete
                      </button>
                    </form>
                  </div>
                  <small class="text-body-secondary">9 mins</small>
                </div>
              </div>
            </div>
          </div>
          <% })); %>
        </div>
      </div>
    </div>
  </body>
</html>
